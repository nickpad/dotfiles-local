set hidden
set relativenumber

" Lookup word under cursor using Dash
nmap <silent> <leader>h <Plug>DashSearch

" Toggle tagbar window
nmap <silent> <leader>n :TagbarToggle<CR>

" Enable neocomplete plugin
let g:neocomplete#enable_at_startup = 1

" Set color scheme
set bg=dark
colorscheme jellybeans

" Run specs using vim-dispatch
let g:rspec_command = "Dispatch rspec {spec}"

" Add mapping for running all specs
map <Leader>a :call RunAllSpecs()<CR>

" Yankstack plugin mappings
let g:yankstack_map_keys = 0
nmap <leader>p <Plug>yankstack_substitute_older_paste
nmap <leader>P <Plug>yankstack_substitute_newer_paste

let g:syntastic_ruby_checkers = ['mri']
let g:syntastic_error_symbol = "âœ—"

" Automatically reload files changed outside of vim
set autoread

" Write files when changing buffer, suspending vim, etc
set autowriteall

" Don't show airline "separator" characters
let g:airline_left_sep = ''
let g:airline_right_sep = ''
