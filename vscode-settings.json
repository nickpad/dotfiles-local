{
  "breadcrumbs.enabled": true,
  "editor.formatOnSave": true,
  "editor.rulers": [
    100
  ],
  "editor.scrollBeyondLastColumn": 0,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.fontFamily": "'Source Code Pro Medium', Monaco, Menlo, 'Courier New', monospace",
  "editor.minimap.renderCharacters": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  // Go
  "go.useLanguageServer": true,
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true, // for build and vet errors as you type
    "findReferences": true // for finding in-package references
  },
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "gopls": {
    "usePlaceholders": true // add parameter placeholders when completing a function
  },
  "go.coverageOptions": "showUncoveredCodeOnly",
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        "go.test.cursor"
      ]
    },
    {
      "before": [
        "<leader>",
        "t"
      ],
      "commands": [
        "go.test.package"
      ]
    },
    {
      "before": [
        "<leader>",
        "a"
      ],
      "commands": [
        "go.toggle.test.file"
      ]
    }
  ],
  "window.zoomLevel": 0,
  "workbench.iconTheme": "vs-minimal",
  "workbench.statusBar.feedback.visible": false,
  "workbench.editor.highlightModifiedTabs": true,
  "zenMode.hideLineNumbers": false,
  "editor.minimap.maxColumn": 100,
  "editor.parameterHints.enabled": false,
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "java.configuration.checkProjectSettingsExclusions": false,
  "git.autofetch": true,
  "editor.fontSize": 13,
}
